{
  "compilerOptions": {
    "target": "ES2020", // Compile to a modern JavaScript version
    "module": "NodeNext", // Use the modern Node.js module system
    "moduleResolution": "NodeNext",
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Allows better interoperability between CommonJS and ES Modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", // Where to output the compiled JavaScript
    "rootDir": "./", // The root directory of your source files
    "allowJs": true // Allow JavaScript files to be compiled
  },
  "include": ["**/*.ts", "**/*.d.ts"],
  "exclude": ["node_modules", "__tests__"] // Which files to ignore
}
